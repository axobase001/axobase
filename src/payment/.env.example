# =============================================================================
# FeralLobster Payment System - Environment Configuration
# =============================================================================
# WARNING: This file contains sensitive configuration. Never commit to Git.
# Copy to .env and fill in your values.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Security Configuration
# -----------------------------------------------------------------------------

# GPG passphrase for wallet encryption/decryption
# This encrypts the AI agent's private key at rest
PRIVATE_KEY_GPG_PASSPHRASE=your_secure_gpg_passphrase_here

# -----------------------------------------------------------------------------
# REQUIRED: Blockchain Configuration
# -----------------------------------------------------------------------------

# Base network RPC URL
# For testnet: https://sepolia.base.org
# For mainnet: https://mainnet.base.org
BASE_RPC_URL=https://sepolia.base.org

# Network selection: 'base' or 'baseSepolia'
NETWORK=baseSepolia

# -----------------------------------------------------------------------------
# Optional: Agent Identity
# -----------------------------------------------------------------------------

# Unique identifier for this AI agent
AGENT_ID=feral-lobster-001

# Project home directory (default: /app for Docker)
FERAL_HOME=/app

# -----------------------------------------------------------------------------
# Optional: Hardware Wallet (Advanced)
# -----------------------------------------------------------------------------

# Enable hardware wallet mode (Ledger/Trezor)
# When enabled, private key never touches software
HARDWARE_WALLET=false

# -----------------------------------------------------------------------------
# Optional: Fallback API Keys (Non-x402 Providers)
# -----------------------------------------------------------------------------

# OpenRouter API key (for backup provider)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Groq API key (for emergency fallback)
GROQ_API_KEY=your_groq_api_key_here

# -----------------------------------------------------------------------------
# Optional: Advanced Configuration
# -----------------------------------------------------------------------------

# Maximum payment retry attempts
MAX_PAYMENT_RETRIES=3

# Settlement polling interval (milliseconds)
POLL_INTERVAL_MS=5000

# Enable/disable automatic Git commits for transactions
ENABLE_GIT_COMMIT=true

# -----------------------------------------------------------------------------
# Testnet Information (Base Sepolia)
# -----------------------------------------------------------------------------
# 
# USDC Contract: 0x036CbD53842c5426634e7929541eC2318f3dCF7e
# Chain ID: 84532
# Faucet: https://www.coinbase.com/faucets/base-ethereum-sepolia-faucet
#
# Get testnet USDC from:
# - Coinbase Faucet (above)
# - Base Bridge (https://bridge.base.org)
#
# =============================================================================

# Contract Address (Base Sepolia Testnet)
X402_CONTRACT=0x77a441e80513A21d505102DeF550860c5b0373cB

# Facilitator URL
X402_FACILITATOR_URL=https://x402.org/facilitator
